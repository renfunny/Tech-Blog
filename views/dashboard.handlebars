<div class="row">
  <div class="col-12" style="text-align: center; margin-top: 1rem;">
    <h2>Welcome {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog title:</label>
        <input
          class="form-control"
          type="text"
          id="blog-title"
          name="blog-title"
        />
      </div>
      <div class="form-group">
        <label for="blog-content">Content:</label>
        <textarea
          class="form-control"
          id="blog-content"
          name="blog-content"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-dark btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
    <div class="col-md-6 blog-list">
      <h3>Current Blog Posts:</h3>

      {{#each blogs as |blog|}}
        <div class="row mb-2">
          <div
            class="col-md-8"
            style="border:1px solid #ced4da; border-radius: 0.375rem "
          >
            <h5 style="margin: 0;"><a
                href="/blog/{{blog.id}}"
                style="text-decoration: none; color: black;"
              >{{blog.title}}</a></h5>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-danger"
              data-id="{{blog.id}}"
            >Delete</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>